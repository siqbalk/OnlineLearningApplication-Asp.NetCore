    <script>
        $(document.body).delegate(".js-Cart", "click", function (e) {
            e.preventDefault();
            var btn = $(this);
            console.log("btn is working");
            $.ajax({
                url: btn.attr('href'),
                type: 'GET',
                success: function (response) {
                    $.ajax({
                        url: '/Cart/GetCartData/',
                        type: 'GET',
                        success: function (data) {
                            $("#cartA").html(data);
                        },
                        error: function () {

                        }
                    })
                },
                error: function () {

                }


            })

        })



