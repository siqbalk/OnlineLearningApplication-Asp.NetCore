<body>

    <div id="preloder">
        <div class="loader"></div>
    </div>
    <header class="header-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="site-logo">
                        <img src="img/logo.png" alt="">
                    </div>
                    <div class="nav-switch">
                        <i class="fa fa-bars"></i>
                    </div>
                </div>
                <div class="col-lg-9 col-md-9">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="site-btn header-btn" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                            Login
                        </a>


                    }
                    <nav class="main-menu">
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a href="#">About us</a></li>
                            <li><a asp-area="" asp-controller="CoursesDashboard" asp-action="Index">Courses</a></li>
                            <li><a href="contact.html">Contact</a></li>

                            @if ((User.Identity.IsAuthenticated && User.IsInRole("Admin")))
                            {
                                <li><a asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Admin</a></li>

                            }
                            @if ((User.Identity.IsAuthenticated && User.IsInRole("User")))
                            {
                                <li><a asp-area="User" asp-controller="Home" asp-action="Index">@User.Identity.Name</a></li>

                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                                        <button style="margin-left:750px;margin-top:-40px;" type="submit" class="nav-link btn btn-danger text-white">
                                            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                                            Logout
                                        </button>
                                    </form>
                                </li>
                                @*<li><a asp-area="" asp-controller="SignIn" asp-action="SignOut">LogOut</a></li>*@
                            }
                            @if ((User.Identity.IsAuthenticated && User.IsInRole("User")))
                            {
                                <li class="nav-item" id="cartA">


                                    @await Component.InvokeAsync("AcademicApplication.ViewComponents.CartList")

                                </li>


                            }

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>



    <div class="container">
        @*<partial name="_CookieConsentPartial" />*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-section ">
        <div class="footer-bottom">
            <div class="footer-warp">
                <ul class="footer-menu">
                    <li><a href="#">Terms & Conditions</a></li>
                    <li><a href="#">Register</a></li>
                    <li><a href="#">Privacy</a></li>
                </ul>
                <div class="copyright">
                    Copyright &copy;
