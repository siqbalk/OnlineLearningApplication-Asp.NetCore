
@model IEnumerable<AcademicApplication.Areas.User.ViewModels.SubscribeCourseListViewModel>
@{
    ViewData["Title"] = "Index";
}

<h3 style="margin-top:30px;">Subscribed List</h3>

@if (Model == null)
{
    <div class="alert alert-danger">
        Empty Data Found
    </div>
}
else
{
    <table class="table table-hover table-condensed" style="margin-top:30px;">
        <thead>
            <tr>
                <th style="width:50%">Product</th>
                <th style="width:50%">SubId</th>
                <th style="width:50%">Subject</th>
                <th style="width:10%">Status</th>
                <th style="width:10%">AppUser</th>
                <th style="width:10%">Action</th>
            </tr>
        </thead>
        @foreach (var sub in Model)
        {


            <tbody>
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            @*<div class="col-sm-2 hidden-xs" style="height:100px;width:300px;"><img src="~/img/courses/3.jpg" alt="..." class="img-responsive" /></div>*@
                            <div class="col-sm-10">
                                <h4 class="nomargin">@sub.Course</h4>
                                <p>@sub.Course</p>
                            </div>
                        </div>
                    </td>

                    <td data-th="Price">@sub.SubscribeId</td>
                    <td data-th="Subtotal" class="text-center">@sub.Subject</td>
                    <td data-th="Subtotal" class="text-center">@sub.Status</td>
                    <td data-th="Subtotal" class="text-center">@sub.Appuser</td>
                    <td class="actions" data-th="">
                        <a asp-area="User" asp-controller="SubsribeCourses" asp-action="UnSubscribe" asp-route-id="@sub.SubscribeId" class="btn btn-danger btn-sm">Unsubscribe</a>
                    </td>
                </tr>
            </tbody>




        }
        <tfoot>
            <tr>
                <td><a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                <td colspan="2" class="hidden-xs"></td>


            </tr>
        </tfoot>
    </table>
}
